extends ../templates/sat-registration-template.pug

block vars
	- var pageTitle = "Registration step with checkbox buttons";
	- var pageType = "SAT";
	- var registrationStepsImage = true;

block content
	.step-progress
		.step-progress__line(style="width: 20%")
	|
	|
	a(href="#" class="section-registration__logo")
		img(src="img/logo-sat.svg" alt="Logo")
	|
	|
	h5.title-default What sections would you like to focus on?
	|
	|
	form(action="#" class="section-registration__form mb-0")
		.form-list
			.form-group
				label.custom-checkbox
					input.custom-checkbox__input.visually-hidden(type="checkbox" value="Math" checked)
					span.custom-checkbox__checkmark
					span.custom-checkbox__text Math
			.form-group
				label.custom-checkbox
					input.custom-checkbox__input.visually-hidden(type="checkbox" value="Reading")
					span.custom-checkbox__checkmark
					span.custom-checkbox__text Reading
			.form-group
				label.custom-checkbox
					input.custom-checkbox__input.visually-hidden(type="checkbox" value="Writing")
					span.custom-checkbox__checkmark
					span.custom-checkbox__text Writing
		.d-flex.justify-content-between.align-items-center
			a(href="#" class="text-gray-dark font-weight-500") Back
			button.btn.btn-primary.btn-lg(type="submit") Next